extends layout

block content
  h1= title
  p  #{query.rows} and #{query.cols}
  var rows = Number(query.rows);
  var col = Number(query.cols);
  if !(Number.isInteger(rows) && Number.isInteger(col))
    p either rows or cols is not an integer
  else if rows > 10 || rows < 1
    p rows out of range
  else if col > 10 || col <1
    p cols out of range
  else
    table#outer
      for (var i = 0; i < rows; i++) {
        tr#middle
        <br>;
          for (var j = 0; j < col; j++) {
             td= (1 + i + (j * rows)) +"  ";
         }
     }